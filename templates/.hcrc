# Variable=HC_SITE
# Default=""
# Name='Site URL'
# Description='Site URL begins with protocol (http://) end with a slash ("/")'
# Validator='^https\?://.\{5,50\}/$'
# Output='%s="%s"'
#
## URL
## begin with protocol (http://) end with slash ("/")
HC_SITE="http://SITE.URL/"

# Variable=HC_FTP_HOST
# Default="$(rev_hostname)"
# Name='FTP hostname'
# Description='Enter the REAL host name of the FTP server'
# Validator='^[a-zA-Z0-9.-]\{5,65\}$'
# Output='%s="%s"'
#
## FTP access
HC_FTP_HOST="s10.hosting.prov"

# Variable=HC_FTP_PORT
# Default="21"
# Name='FTP port number'
# Description='Enter the port number of the the FTP server'
# Validator='^[0-9]\{1,5\}$'
# Output='%s="%s"'
#
## FTP port
HC_FTP_PORT="2222"

# Variable="HC_FTP_USER"
# Default=""
# Name="FTP username"
# Description='Enter the FTP user name'
# Validator='^.\{1,50\}$'
# Output='%s="%s"'
#
## FTP user name
HC_FTP_USER="ftp_username"

# Variable="HC_FTP_PASSWORD"
# Default=""
# Name="FTP password"
# Description='Enter the FTP password'
# Validator='^.\{5,50\}$'
# Output='%s="%s"'
#
## FTP password
HC_FTP_PASSWORD='ftp_password'

# Variable="HC_FTP_ENABLE_TLS"
# Default="1"
# Name="FTP TLS detection"
# Description='"1" enables TLS detection in FTP, "0" disables, "3" for SFTP (file transfer over SSH)'
# Validator='^[013]$'
# Output='%s="%d"'
#
## enable TLS detection in FTP connection
HC_FTP_ENABLE_TLS="1"

# Variable="HC_FTP_WEBROOT"
# Default="/public_html"
# Name="Document root"
# Description='Relative webroot directory often begins with "/"'
# Validator='^'
# Output='%s="%s"'
#
## document root (webroot)
HC_FTP_WEBROOT="/public_html"

# Variable="HC_MAILSERVER_IP"
# Default=""
# Name="Main mailserver"
# Description="IP address of the other mailserver you use besides the hosting's one"
# Validator='^\([0-9]\{1,3\}\.\)\{3\}[0-9]\{1,3\}$'
# Output='%s="%s"'
#
## IP of another mailserver you use
HC_MAILSERVER_IP=""

# Variable="HC_TIMEZONE"
# Default="Europe/Budapest"
# Name="Time zone"
# Description='Local time zone for PHP'
# Validator='^[A-Z][a-zA-Z_]\+/[A-Z][a-zA-Z_]\+$'
# Output='%s="%s"'
#
## Time Zone
HC_TIMEZONE="Europe/Budapest"
